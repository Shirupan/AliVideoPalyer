<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="18dp">

    <TextView
        android:id="@+id/video_detail_item_shoucang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:drawableTop="@drawable/icon_video_detail_shoucang"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:text="收藏"
        android:textColor="?attr/smTipColor"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_detail_item_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:lineSpacingMultiplier="1.2"
        android:minLines="2"
        android:text="标题"
        android:textColor="?attr/smTitleColor"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/video_detail_item_shoucang"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/video_detail_item_play_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="1111"
        android:textColor="?attr/smTipColor"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="@+id/video_detail_item_title"
        app:layout_constraintTop_toBottomOf="@+id/video_detail_item_title" />


    <TextView
        android:id="@+id/video_detail_item_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/icon_main_share"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textColor="?attr/smContentColor"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/video_detail_item_play_count" />

    <TextView
        android:id="@+id/video_detail_item_zan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:background="?attr/selectableItemBackground"
        android:drawableLeft="@drawable/icon_main_zan"
        android:drawablePadding="5dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="0"
        android:textColor="?attr/smContentColor"
        android:textSize="12sp"
        app:layout_constraintRight_toLeftOf="@+id/video_detail_item_share"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/video_detail_item_share" />

</android.support.constraint.ConstraintLayout>