<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/layout_bg_white_selector"
    android:orientation="vertical"
    android:paddingTop="10dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="0dp">

        <ImageView
            android:id="@+id/sub_test_pic"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/icon_default_vertical" />

        <TextView
            android:id="@+id/sub_test_pic_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_round2_right_red"
            android:clickable="false"
            android:paddingLeft="5dp"
            android:paddingTop="2dp"
            android:paddingRight="15dp"
            android:paddingBottom="2dp"
            android:text="人气测试"
            android:textColor="@android:color/white"
            android:textSize="13sp" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/sub_test_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="14dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="2017年运势"
        android:textColor="#434141"
        android:textSize="16sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        android:layout_marginBottom="4dp">

        <TextView
            android:id="@+id/sub_test_look"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/sub_test_title"
            android:layout_alignParentBottom="true"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="0"
            android:textColor="?attr/smTipColor"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/sub_test_comment"
            style="@style/text_ad_tip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21dp" />
    </LinearLayout>


</LinearLayout>
