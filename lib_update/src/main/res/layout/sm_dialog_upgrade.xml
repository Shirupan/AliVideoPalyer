<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/upgrade_info_linear"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round_white"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_dialog_update" />

            <ImageView
                android:id="@+id/dialog_cancel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="right"
                android:background="?attr/selectableItemBackground"
                android:scaleType="centerInside"
                android:src="@drawable/icon_dialog_cancel" />
        </FrameLayout>


        <TextView
            android:id="@+id/tips_title_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="新版本（6.5.0）"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/tips_content_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fadeScrollbars="false"
            android:maxHeight="200dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:scrollbars="vertical"
            android:text="更新日志"
            android:textColor="@android:color/black"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="温馨提示 : 为了不影响正常使用应用，建议马上升级，并留意通知栏下载信息。"
            android:textColor="@color/upgrade_tips_color"
            android:textSize="12sp" />



        <ProgressBar
            android:id="@+id/to_upgrade_progress"
            style="@style/sm_progress_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:progress="50" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:src="#f2f2f2" />

        <TextView
            android:id="@+id/to_upgrade_txt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:text="马上升级"
            android:textColor="#e52c2c"
            android:textSize="14sp" />
    </LinearLayout>

</FrameLayout>